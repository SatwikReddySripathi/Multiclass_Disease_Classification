# Base Python image
FROM python:3.8-slim

# Set the working directory
WORKDIR /app

# Copy requirements and install dependencies
COPY model_requirements.txt ./
RUN pip install --no-cache-dir --upgrade pip && pip install --no-cache-dir -r model_requirements.txt

# Copy application files into the container
COPY streamlit_application/ /app

# Expose the Streamlit port
EXPOSE 8080

# Define the entry point for Streamlit
CMD ["streamlit", "run", "deploy_streamlit.py", "--server.port=8080", "--server.address=0.0.0.0"]
