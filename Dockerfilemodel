# Use a base Python image
FROM python:3.8

# Install dependencies
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy over the model requirements and install
COPY model_requirements.txt .
RUN pip install --no-cache-dir -r /model_requirements.txt

RUN mkdir -p /app

# Set the working directory
WORKDIR /app

# Copy your model training script and other necessary files
COPY model/ model/

# Create a directory to save the model
RUN mkdir -p /app/model_output

# Copy GCP credentials (optional; use if embedding credentials into the image)
# COPY gcp-key.json /app/gcp-key.json

# Set environment variable for GCP credentials (if included in the image)
# ENV GOOGLE_APPLICATION_CREDENTIALS="/app/gcp-key.json"

# Entry point for running the training script
CMD ["python", "model/final_model.py"]
